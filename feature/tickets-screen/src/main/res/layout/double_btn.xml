<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatButton
        android:paddingStart="@dimen/dimen_12dp"
        android:id="@+id/filter"
        android:layout_width="@dimen/dimen_90dp"
        android:layout_height="@dimen/dimen_40dp"
        android:background="@drawable/left_rounded_button"
        android:drawableStart="@drawable/ic_filter"
        android:drawablePadding="@dimen/dimen_4dp"
        android:fontFamily="@font/sfp_display_regular"
        android:text="@string/btn_filter"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textSize="@dimen/dimen_14sp"
        android:tint="@color/blue_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="@dimen/dimen_110dp"
        android:layout_height="@dimen/dimen_40dp"
        android:background="@drawable/right_rounded_button"
        android:backgroundTint="@color/blue_1"
        android:drawableStart="@drawable/ic_schedule"
        android:drawablePadding="@dimen/dimen_4dp"
        android:fontFamily="@font/sfp_display_regular"
        android:text="@string/btn_schedule"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textSize="@dimen/dimen_14sp"
        app:layout_constraintStart_toEndOf="@+id/filter"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>