<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LittleRoundMaterialBtn" parent="Widget.Material3.Button">
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/sfp_display_regular</item>
        <item name="android:textSize">@dimen/dimen_14sp</item>
        <item name="cornerRadius">@dimen/dimen_50dp</item>
        <item name="android:drawablePadding">@dimen/dimen_8dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">@color/grey_3</item>
        <item name="iconGravity">start</item>
    </style>

    <style name="BigRoundMaterialBtn" parent="Widget.Material3.Button">
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/sfp_display_semi_bold_italic</item>
        <item name="android:textSize">@dimen/dimen_14sp</item>
        <item name="cornerRadius">@dimen/dimen_8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_42dp</item>
        <item name="backgroundTint">@color/blue_1</item>
    </style>
</resources>